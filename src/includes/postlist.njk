<ol class="postlist" reversed>
{% for post in collections.posts | reverse %}
    <li>
        <a href="{{ post.url | url }}">{{ post.data.title }}</a>
        <time datetime="{{ post.date | dateToFormat('yyyy-LL-dd') }}">
            ({{ post.date | dateToFormat(meta.dateFormat, meta.lang) }})
        </time>
    </li>
{% endfor %}
</ol>